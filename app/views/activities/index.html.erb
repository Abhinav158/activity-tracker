<% if notice.present? %>
  <div class="alert alert-success fixed-top w-100 text-center mb-4" role="alert">
    <%= notice %>
  </div>
<% end %>

<% if alert.present? %>
  <div class="alert alert-danger fixed-top w-100 text-center mb-4" role="alert">
    <%= alert %>
  </div>
<% end %>


<div>
  <% if user_signed_in? %>
    <div>
      <h1 class="text-secondary text-md mt-5 mb-5">Welcome <%= current_user.email.split('@').first.capitalize %> ðŸ‘‹</h1>

    </div>

    <h1 class="text-primary">
      Your Activities
      <small><%= link_to "<i class='bi bi-plus-square-fill text-primary mx-2'></i>".html_safe, new_activity_path %></small>
    </h1>
    

    <div id="activities" class="mt-4 card-deck">
      <% @activities.where(user_id: current_user.id).each do |activity| %>
        <div class="col-sm-12 col-md-6 col-lg-4">
          <%= render activity %>
        </div>
      <% end %>
    </div>

    


    <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-secondary mt-2" %>

    <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary mt-2" %>
  
  <% else %>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card p-4 text-center">
            <h1 class="text-primary text-lg mb-4 py-5"> Welcome to FlexFlow!</h1>
            <p class="text-secondary mb-4 fs-5 text-nowrap"> Your personal hub for tracking and improving your fitness journey. </p>

              <%= link_to "Sign up", new_user_registration_path, class:"btn btn-secondary mt-2 px-2 py-2" %>
              <%= link_to "Sign in", new_user_session_path, class:"btn btn-primary mt-2 px-2 py-2" %>
          </div>
        </div>
      </div>
    </div>

  
  <% end %>

</div>
